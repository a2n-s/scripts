# parse the arguments
OPTIONS=$(getopt -o h --long help -n 'a2n-s-TODO' -- "$@")
if [ $? != 0 ] ; then echo "Terminating..." >&2 ; exit 1 ; fi
eval set -- "$OPTIONS"

# allow the user to change the environment variables.
[[ ! -v TODO ]] && TODO=700


usage () {
  #
  # the usage function.
  #
  echo "Usage: a2n-s-TODO [-h]"
  echo "Type -h or --help for the full help."
  exit 0
}


help () {
  #
  # the help function.
  #
  echo "a2n-s-TODO:"
  echo "     TODO."
  echo ""
  echo "Usage:"
  echo "     a2n-s-TODO [-h]"
  echo ""
  echo "Switches:"
  echo "     -h/--help             shows this help."
  echo ""
  echo "Environment variables:"
  echo "     TODO              TODO (defaults to TODO)"
  exit 0
}


main () {
  #
  # TODO.
  #
  while [[ $# -gt 0 ]]; do
    case "$1" in
      -h | --help )   help ;;
      -- ) shift; break ;;
      * ) break ;;
    esac
  done

  TODO
}


main "$@"
